msgFormat = '{author} {badges}| {msg}'
badgesFormat = '[{badge}] '
spacingFormat = '\n'
nick = 'zsadroh'

# ANSI Colors available BLACK, RED, GREEN, YELLOW, BLUE, MAGENTA, CYAN, WHITE
# test DIM, NORMAL, BRIGHT

